<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme"  parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- this is to set the status bar in white
           <item name="colorPrimaryDark">@color/white</item>-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <!--<item name="colorControlNormal">#000000</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="fontFamily"></item>-->
     </style>

    <style name="ActionBar">
        <item name="colorPrimary">@color/white</item>
        <!--<item name="colorPrimaryDark">@color/orange</item>-->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="CustomOverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="color">@color/white</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="recyclerViewItem">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="buscador" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#c3c3c3</item>
        <item name="android:textColorHint">#c3c3c3</item>
    </style>
    <style name="buttonsAdministrarCuentas">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MyTextInputEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">#FF5722</item>
    </style>

    <style name="CustomDatePickerTheme">
        <item name="android:calendarViewStyle">@style/CustomCalendarStyle</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/orange</item>
    </style>

    <style name="CustomCalendarStyle">
        <item name="android:background">@color/orange</item>
    </style>

</resources>