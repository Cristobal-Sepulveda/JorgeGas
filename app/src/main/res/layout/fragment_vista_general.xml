<?xml version="1.0" encoding="utf-8"?>
<layout
    android:id="@+id/fragmentVistaGeneral"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.conductor.ui.vistageneral.VistaGeneralViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        tools:context=".ui.vistageneral.VistaGeneralFragment">

        <ImageView
            android:id="@+id/imageView_vistaGeneral_botonVolantero"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:src="@drawable/card_vistageneral_volantero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/volanteros"
            android:layout_marginHorizontal="@dimen/space_big"
            android:layout_marginTop="@dimen/space_big"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <ImageView
            android:id="@+id/imageView_vistaGeneral_botonCallCenter"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:src="@drawable/card_vistageneral_callcenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_vistaGeneral_botonVolantero"
            android:contentDescription="@string/call_center"
            android:layout_marginHorizontal="@dimen/space_big"
            android:layout_marginTop="@dimen/space_medium"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/imageView_vistaGeneral_botonChoferes"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:src="@drawable/card_vistageneral_chofer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_vistaGeneral_botonCallCenter"
            android:contentDescription="@string/call_center"
            android:layout_marginHorizontal="@dimen/space_big"
            android:layout_marginTop="@dimen/space_medium"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_vistaGeneral_registroJornadaVolantero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/space_medium"
            app:backgroundTint="@color/green"
            android:visibility="gone"
            app:fabCustomSize="100dp"
            android:contentDescription="@string/iniciar_turno"
            app:botonIniciarODetenerRegistroVolantero="@{viewModel.botonVolantero}"
            tools:visibility="visible"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_vistaGeneral_sinMaterial"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/space_medium"
            android:layout_marginEnd="@dimen/space_medium"
            app:backgroundTint="@color/orange"
            android:visibility="gone"
            app:fabCustomSize="48dp"
            android:src="@drawable/baseline_notifications_active_24"
            android:contentDescription="@string/falta_material"
            tools:visibility="visible"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView_vistaGeneral_mapa"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:layout="@layout/fragment_crear_usuario"
            />

        <ImageView
            android:id="@+id/imageView_vistaGeneral_mapaSinPermisos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/mapa_sin_permisos"
            android:visibility="gone"
            android:contentDescription="@string/mapa_sin_permisos_autorizados" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView_vistaGeneral_informacionVolantero"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="1dp"
            android:background="@drawable/bottom_left_border"
            android:visibility="gone"
            style="?attr/materialCardViewElevatedStyle"
            tools:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/space_very_small"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_vistaGeneral_verde"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:background="@drawable/my_circle_drawable_verde"
                        android:contentDescription="@string/verde"/>

                    <TextView
                        android:id="@+id/textView_vistaGeneral_verde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:text="00:00:00"
                        tools:text="00:00:00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_vistaGeneral_amarillo"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:background="@drawable/my_circle_drawable_amarillo"
                        android:contentDescription="@string/amarillo"/>

                    <TextView
                        android:id="@+id/textView_vistaGeneral_amarillo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:text="00:00:00"
                        tools:text="00:00:00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_vistaGeneral_rojo"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:background="@drawable/my_circle_drawable_rojo"
                        android:contentDescription="@string/rojo"/>
                    <TextView
                        android:id="@+id/textView_vistaGeneral_rojo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:text="00:00:00"
                        tools:text="00:00:00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_vistaGeneral_azul"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:background="@drawable/my_circle_drawable_azul"
                        android:contentDescription="@string/azul"/>

                    <TextView
                        android:id="@+id/textView_vistaGeneral_azul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:text="00:00:00"
                        tools:text="00:00:00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_vistaGeneral_rosado"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:background="@drawable/my_circle_drawable_rosado"
                        android:contentDescription="@string/rosado"/>

                    <TextView
                        android:id="@+id/textView_vistaGeneral_rosado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:text="00:00:00"
                        tools:text="00:00:00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_vistaGeneral_kilometros"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:layout_marginBottom="@dimen/space_small"
                        android:background="@drawable/baseline_directions_walk_24"
                        android:contentDescription="@string/kilometros"/>

                    <TextView
                        android:id="@+id/textView_vistaGeneral_kilometros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_very_small"
                        android:text="0.00km"
                        tools:text="22.1k"/>
                </LinearLayout>


            </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>