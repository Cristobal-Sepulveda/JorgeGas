<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_vistaGeneral_uiCallCenter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:visibility="visible">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_vistaGeneral_uiCallCenter_buscarPorDireccionOTelefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_small"
        android:layout_marginTop="@dimen/space_big"
        android:autofillHints="email"
        android:hint="@string/buscar_por_direccion_o_telefono"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/edittext_border_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_vistaGeneral_uiCallCenter_buscarPorDireccionOTelefono"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_vistaGeneral_uiCallCenter_buscarPorDireccionOTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buscar"
        app:layout_constraintStart_toEndOf="@id/autoCompleteTextView_vistaGeneral_uiCallCenter_buscarPorDireccionOTelefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        />

    <Button
        android:id="@+id/button_vistaGeneral_uiCallCenter_confirmarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmar_direccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/autoCompleteTextView_vistaGeneral_uiCallCenter_buscarPorDireccionOTelefono"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginHorizontal="@dimen/space_big"
        />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView_vistaGeneral_mapaCallCenter"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_vistaGeneral_uiCallCenter_confirmarPedido"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/fragment_gestion_de_material"/>

    <ImageView
        android:id="@+id/imageView_vistaGeneral_mapaCallCenterSinPermisos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/mapa_sin_permisos"
        android:visibility="gone"
        android:contentDescription="@string/mapa_sin_permisos_autorizados" />

</androidx.constraintlayout.widget.ConstraintLayout>