<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name ="asistenciaItem"
            type ="com.example.conductor.data.data_objects.domainObjects.Asistencia"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_item_listado_asistencia"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_nombreCompleto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{asistenciaItem.nombreCompleto}"
            android:textColor="@color/black"
            tools:text="nombreCompleto"
            android:layout_marginStart="@dimen/space_small"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_sueldoDiario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{asistenciaItem.getFormatted(asistenciaItem.sueldoDiario)}"
            android:textColor="@color/black"
            tools:text="$10.000"
            android:textAlignment="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_diasTrabajados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{asistenciaItem.diasTrabajados}"
            android:textAlignment="center"
            android:textColor="@color/black"
            tools:text="12"
            android:layout_weight="1.1" />

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_sueldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{asistenciaItem.getFormatted(asistenciaItem.sueldo)}"
            android:textColor="@color/black"
            tools:text="$120.000"
            android:layout_weight="1.1"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_bono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{asistenciaItem.bono}"
            android:textColor="@color/black"
            tools:text="0"
            android:layout_weight="0.2"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{asistenciaItem.getFormatted(asistenciaItem.total)}"
            android:textColor="@color/black"
            tools:text="0"
            android:textAlignment="center"
            android:layout_weight="0.9"
            />
    </LinearLayout>
</layout>
