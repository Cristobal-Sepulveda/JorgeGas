<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_cardPedidoBalonOnceKilos_balonOnceKilos"
        android:layout_width="@dimen/space_width_card_imageview_balon_de_gas"
        android:layout_height="@dimen/space_height_card_imageview_balon_de_gas"
        android:src="@drawable/imagen_balon_11k"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_cardPedidoBalonOnceKilos_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/once_kilos"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textSize="@dimen/text_title"
        android:layout_marginTop="@dimen/space_small"
        app:layout_constraintEnd_toEndOf="@id/imageView_cardPedidoBalonOnceKilos_balonOnceKilos"
        app:layout_constraintStart_toStartOf="@id/imageView_cardPedidoBalonOnceKilos_balonOnceKilos"
        app:layout_constraintTop_toBottomOf="@id/imageView_cardPedidoBalonOnceKilos_balonOnceKilos" />

    <ImageView
        android:id="@+id/imageView_cardPedidoBalonOnceKilos_restar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_remove_24_orange"
        android:layout_marginTop="@dimen/space_card_pedido_balon_de_gas"
        app:layout_constraintStart_toStartOf="@id/imageView_cardPedidoBalonOnceKilos_balonOnceKilos"
        app:layout_constraintEnd_toStartOf="@id/editText_cardPedidoBalonOnceKilos_cantidad"
        app:layout_constraintTop_toBottomOf="@id/textView_cardPedidoBalonOnceKilos_descripcion" />

    <EditText
        android:id="@+id/editText_cardPedidoBalonOnceKilos_cantidad"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="@string/zero"
        android:textSize="@dimen/edittext_card_formulario_pedido"
        android:layout_marginTop="@dimen/space_medium"
        android:layout_marginBottom="@dimen/space_big"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toStartOf="@id/imageView_cardPedidoBalonOnceKilos_sumar"
        app:layout_constraintStart_toEndOf="@id/imageView_cardPedidoBalonOnceKilos_restar"
        app:layout_constraintTop_toBottomOf="@id/textView_cardPedidoBalonOnceKilos_descripcion"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/imageView_cardPedidoBalonOnceKilos_sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24_orange"
        android:layout_marginTop="@dimen/space_card_pedido_balon_de_gas"
        app:layout_constraintStart_toEndOf="@id/editText_cardPedidoBalonOnceKilos_cantidad"
        app:layout_constraintEnd_toEndOf="@id/imageView_cardPedidoBalonOnceKilos_balonOnceKilos"
        app:layout_constraintTop_toBottomOf="@id/textView_cardPedidoBalonOnceKilos_descripcion" />


</androidx.constraintlayout.widget.ConstraintLayout>
