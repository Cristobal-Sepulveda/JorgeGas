<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewModel"
            type="com.example.conductor.ui.map.MapViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout="@layout/fragment_vista_general"
            />

        <ImageView
            android:id="@+id/imageview_mapaSinPermisos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/mapa_sin_permisos"
            android:visibility="gone"
            android:contentDescription="@string/mapa_sin_permisos_autorizados" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_vistaOriginal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/space_medium"
            android:contentDescription="@string/zoom_out"
            android:src="@drawable/ic_baseline_add_48"
            app:backgroundTint="@color/orange"
            app:fabCustomSize="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_map_activarLocalizacion"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/space_medium"
            android:contentDescription="@string/zoom_out"
            android:src="@drawable/baseline_satellite_alt_24"
            app:backgroundTint="@color/orange"
            app:fabCustomSize="48dp"
            app:layout_constraintBottom_toTopOf="@+id/fab_vistaOriginal"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
