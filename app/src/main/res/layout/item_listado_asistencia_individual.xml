<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name ="asistenciaItem"
            type ="com.example.conductor.data.data_objects.domainObjects.Asistencia"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_nombreCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{asistenciaItem.nombreCompleto}"
            android:textColor="@color/black"
            tools:text="nombreCompleto"/>

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_sueldoDiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{asistenciaItem.sueldoDiario}"
            android:textColor="@color/black"
            tools:text="$10.000"/>

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_diasTrabajados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{asistenciaItem.diasTrabajados}"
            android:textColor="@color/black"
            tools:text="12"/>

        <TextView
            android:id="@+id/textView_itemListadoAsistencia_sueldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{asistenciaItem.nombreCompleto}"
            android:textColor="@color/black"
            tools:text="$120.000"/>


        <TextView
            android:id="@+id/textView_itemListadoAsistencia_bono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{asistenciaItem.bono}"
            android:textColor="@color/black"
            tools:text="0"/>


        <TextView
            android:id="@+id/textView_itemListadoAsistencia_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{asistenciaItem.nombreCompleto}"
            android:textColor="@color/black"
            tools:text="$120.000"/>

    </LinearLayout>
</layout>
