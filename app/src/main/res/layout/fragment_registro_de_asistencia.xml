<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.conductor.ui.registrodeasistencia.RegistroDeAsistenciaViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_registroDeAsistencia_titulo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_big"
            android:text="@string/registro_de_asistencia"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="@dimen/text_medium_24"
            />

        <Button
            android:id="@+id/button_registroDeAsistencia_obtenerDesde"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_registroDeAsistencia_obtenerHasta"
            app:layout_constraintTop_toBottomOf="@id/textView_registroDeAsistencia_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:text="@string/desde"
            />

        <Button
            android:id="@+id/button_registroDeAsistencia_obtenerHasta"
            app:layout_constraintStart_toEndOf="@id/button_registroDeAsistencia_obtenerDesde"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_registroDeAsistencia_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:text="@string/hasta"
            />
        <Button
            android:id="@+id/button_registroDeAsistencia_obtenerExcel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_registroDeAsistencia_obtenerDesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:text="@string/exportar_a_excel"
            />

