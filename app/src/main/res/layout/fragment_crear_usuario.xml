<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".ui.vistageneral.VistaGeneralFragment"
    >

    <TextView
        android:id="@+id/textview_DataUsuarioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_big"
        android:text="@string/crear_nueva_cuenta"
        android:textSize="24sp"
        android:textColor="#283484"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_nombre"
        style="?attr/textInputOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_normal"
        android:padding="10dp"
        app:endIconMode="clear_text"
        android:hint="@string/nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_DataUsuarioTitle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_dataUsuario_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editText_dataUsuario_aPaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_small"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:autofillHints="apellido paterno"
        android:hint= "@string/apellido_paterno"
        android:inputType="text"
        
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_nombre"
        />
    <EditText
        android:id="@+id/editText_dataUsuario_aMaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_small"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:autofillHints="Apellido materno"
        android:hint="@string/apellido_materno"
        android:inputType="text"
        
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_dataUsuario_aPaterno"
        />
    <EditText
        android:id="@+id/editText_dataUsuario_rol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_small"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:autofillHints="rol"
        android:hint="@string/rol"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_dataUsuario_aMaterno"
        />
    <EditText
        android:id="@+id/editText_dataUsuario_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_small"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:autofillHints="usuario"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_dataUsuario_rol"
        />
    <EditText
        android:id="@+id/editText_dataUsuario_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_small"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:autofillHints="contraseña"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_dataUsuario_usuario"
        />
    <EditText
        android:id="@+id/editText_dataUsuario_confirmarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_small"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:autofillHints="contraseña"
        android:hint="@string/confirmar_password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_dataUsuario_password"
        />

    <TextView
        android:id="@+id/button_dataUsuario_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_dataUsuario_confirmar"
        app:layout_constraintTop_toBottomOf="@id/editText_dataUsuario_confirmarPassword"
        android:layout_marginEnd="@dimen/space_big"
        android:layout_marginTop="@dimen/space_bigger"
        android:text="@string/volver" />

    <Button
        android:id="@+id/button_dataUsuario_confirmar"
        style="@style/buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/button_dataUsuario_volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_dataUsuario_confirmarPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/space_big"
        android:layout_marginEnd="@dimen/space_small"
        android:layout_marginBottom="@dimen/space_bigger"
        android:layout_marginTop="@dimen/space_bigger"
        android:text="@string/confirmar"/>


</androidx.constraintlayout.widget.ConstraintLayout>