<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name ="usuarioItem"
            type ="com.example.conductor.data.data_objects.domainObjects.Usuario"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_normal"
        android:contentDescription="@{usuarioItem.nombre}">

        <TextView
            style="@style/recyclerViewItem"
            android:id="@+id/textview_usuarioNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:text="@{usuarioItem.nombre}"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TEXTTEXTTEXT" />

        <TextView
            style="@style/recyclerViewItem"
            android:id="@+id/textview_usuarioApellidoPaterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@{usuarioItem.apellidoPaterno}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_usuarioNombre"
            tools:text="TEXTTEXTTEXT" />

        <TextView
            style="@style/recyclerViewItem"
            android:id="@+id/textview_usuarioApellidoMaterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@{usuarioItem.apellidoMaterno}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_usuarioApellidoPaterno"
            tools:text="TEXTTEXTTEXT" />
        <TextView
            style="@style/recyclerViewItem"
            android:id="@+id/textview_usuarioUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@{usuarioItem.usuario}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_usuarioApellidoMaterno"
            tools:text="TEXTTEXTTEXT" />
        <TextView
            style="@style/recyclerViewItem"
            android:id="@+id/textview_usuarioPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@{usuarioItem.password}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_usuarioUsuario"
            tools:text="TEXTTEXTTEXT" />

        <ImageView
            android:id="@+id/imageView_usuarioItem_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="@+id/textview_usuarioPassword"
            app:layout_constraintStart_toEndOf="@+id/textview_usuarioApellidoMaterno"
            app:layout_constraintTop_toTopOf="@+id/textview_usuarioNombre" />

        <ImageView
            android:id="@+id/imageView_usuarioItem_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/text_normal"
            android:contentDescription="@string/editar_boton"
            android:src="@drawable/ic_baseline_edit_24"
            app:layout_constraintBottom_toBottomOf="@+id/textview_usuarioPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_usuarioItem_delete"
            app:layout_constraintTop_toTopOf="@+id/textview_usuarioNombre" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>